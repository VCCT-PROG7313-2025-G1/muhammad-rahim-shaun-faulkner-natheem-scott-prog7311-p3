<!-- res/drawable/button_rounded_dark.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#5A4C91"/> <!-- Pressed color -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#DAD1FF"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#7A5EFF"
                android:endColor="#4B3F72"
                android:angle="45"/>
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="#DAD1FF"/>
        </shape>
    </item>
</selector>
